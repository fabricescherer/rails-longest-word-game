<div class="container">
  <h1>Welcome to the longest word-game!</h1>
  <p>Here is your grid:</p>
  <div class = "letters">
    <% @letters.each do |letter| %>
      <p id="letter">
        <%=letter %>
      </p>
    <% end %>
  </div>
  <form action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'letters', @letters %>
    <label for="question">What's your best shot?</label>
    <input  type="text" name="answer" id="question">
    <input type="submit" value="Play">
  </form>
</div>
